{
    "name": "Online Twitch Streamers",
    "description": "Check if your favourite twitch streamers are online.",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons": {
        "16": "./images/16white.png",
        "32": "./images/32white.png",
        "48": "./images/48white.png",
        "128": "./images/128white.png"
    },
    "background": {
        "service_worker": "./background.js"
    },
    "action": {
        "default_popup": "./popup.html",
        "default_icons": {
            "16": "./images/16white.png",
            "32": "./images/32white.png",
            "48": "./images/48white.png",
            "128": "./images/128white.png"
        }
    },
    "options_page": "./options.html",
    "permissions": [
        "storage",
        "alarms",
        "notifications"
    ],    
    "host_permissions": [
        "<all_urls>"
    ]

}